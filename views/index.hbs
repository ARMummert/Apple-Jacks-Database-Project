        <div id="browse" >
            <section class="sectionone">
            <table class="tableone" border="1" cellpadding="5">
                <thead>
                    <tr>
                        <th><a href="#" onClick="newCompetition()"><input type="button" value="New Competition"></a></th>
                        <th></th>
                        <th>ID</th>
                        <th>Competition Name</th>
                        <th>Date</th>
                        <th>Start Time</th>
                        <th>Location Name</th>
                        <th>Location Address</th>
                        <th>Location Phone</th>      
                    </tr>
                </thead>
        
                <tbody>
                    <tr>
                        <td><a href="#" onClick="updateCompetition('this.competitionID')"><input type="button" value="Edit"></a></td>
                        <td><a href="#" onclick="deleteCompetition('this.competitionID')"><input type="button" value="Delete"></a></td>
