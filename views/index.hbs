                    </tr>
                    <tr>
                        <td><a href="#" onClick="updateCompetition('this.competitionID')"><input type="button" value="Edit"></a></td>
                        <td><a href="#" onclick="deleteCompetition('this.competitionID')"><input type="button" value="Delete"></a></td>
                        <td>2</td>
                        <td>Oregon State Baton Championships</td>
                        <td>2023-04-29</td>
