<!-- teams.hbs -->

<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>


<h3 class=padtop>Teams</h3>

<section class="sectionone">
    {{! Create a table }}

    <table id="teams-table" class="tableone" border="1" cellpadding="5" >
        {{! Header section }}

        <thead>
              <tr>
                {{#each data.[0]}}
                <th>{{@key}}</th>
                {{/each}}
                <th>Delete</th>    
            </tr>
        </thead>
        {{! Body section }}
        <tbody>
            {{#each data}}
            <tr data-value={{this.ID}}>
                <td>{{this.ID}}</td>
                <td>{{this.Team}}</td>
                <td>{{this.Coach-Name}}</td>
                <td>{{this.Coach-Phone}}</td>
                <td>{{this.Coach-Email}}</td>
                <td><button class="button-62" onClick="deleteTeams({{this.ID}})">Delete</button></td>            
            </tr>   
            {{/each}}
        </tbody>
    </table>
</section>   

<section class="sectionthree">
        <h3 class="section-header"> Add Team </h3>
        <form id="add-teams-form">         
            <table class="addtable">
                
                <tr>
                    <td><p class="inpboxlabel" for="input-team-name">Team Name</p></td>
                    <td><input class="inpbox" type="text" name="input-team-name" id="input-team-name" required  placeholder="Team Name"></td>
                       
                </tr>
                <tr>
                   <td><p class="inpboxlabel" for="input-coach-name">Coach Name</p></td>
                    <td><input class="inpbox" type="text" name="input-coach-name" id="input-coach-name" required  placeholder="Coach Name"></td>
                       
                </tr>
                <tr>
                    <td><p class="inpboxlabel" for="input-coach-phone">Coach Phone</p></td>
                    <td><input class="inpbox" type="text" name="input-coach-phone" id="input-coach-phone" required  placeholder="Coach Phone"></td>
                       
                </tr>
                <tr>
                     <td><p class="inpboxlabel" for="input-coach-email">Coach Email</p></td>
                    <td><input class="inpbox" type="text" name="input-coach-email" id="input-coach-email" required  placeholder="Coach Email"></td>
                       
                </tr>
                <tr>
                    <td><input class="button-62" onclick-"addTeamsForm()" type="submit" value="Add"></td>
                    <td><input class="button-62" type="reset" value="Cancel"></td>
                </tr>
            </table>
        </form>
</section>
            



<script src="./js/delete_team.js"></script>
<script src="./js/add_team.js"></script>
